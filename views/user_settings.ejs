<body>
    <div class="logo">
        <img src="/assets/img/longlogo.png">
    </div>
    <strong>
        Welcome to EXPLOIT-COMMUNTIY!
    </strong>
    <section class="main-section">
        <div id="deleteModal" class="modal">
            <!-- Modal content -->
            <div class="modal-content">
                <span style="text-align: right; vertical-align: middle;" class="close">x</span>
                <form action="/api/account_delete_request" method="POST">
                    <button class="btn btn-primary">Delete Account</button>
                </form>
            </div>
        </div>
        <div id="nameModal" class="modal">
            <!-- Modal content -->
            <div class="modal-content">
                <span style="text-align: right; vertical-align: middle;" class="close">x</span>
                <form action="/api/change_username_request" method="POST">
                    <input class="form-control" type="text" placeholder="<%= User.username %>" style="width: 15%;" name="username" id="username"><br>
                    <button class="btn btn-primary" type="submit" style="left: 0;">Change</button>
                </form>
            </div>
        </div>
        <div class="main">
            <strong>
                <label for="main">USER SETTINGS</label><br>
            </strong><br>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Information</h5>
                        <p class="card-text"><label>Current Username: <a><%= User.username %></a></label><br>
                            <label>Current Rank: <a><%= User.rank %></a></label><br>
                            <label>Current Points: <a><br><%= User.points %></a></label><br>
                            <label>Current HWID: <a><br><%= User.hwid %></a></label><br>
                            <label>Used Key: <a><br><%= User.usedKey %></a></label><br>
                            <label>Invited by: <a><br><%= User.invitedBy %></a></label><br>
                            <label>In Giveaway: <a><%= User.giveaway %></a></label><br>
                            <label>Auth Token: <a><br><%= User.token %></a></label><br></p>
                    </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" id="NameBtn">Change Username</button><br><br>
            <a href="/dashboard"><button class="btn btn-primary">To Dashboard</button></a><br><br>
            <label>Really?</label><br>
            <button class="btn btn-primary" id="DeleteBtn">Delete Account</button>
        </div>
    </section>
    <script>
        // Get the modal
        var namemodal = document.getElementById("nameModal");
        var deletemodal = document.getElementById("deleteModal");
        
        // Get the button that opens the modal
        var namebtn = document.getElementById("NameBtn");
        var deletebtn = document.getElementById("DeleteBtn");
        
        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];
        var span2 = document.getElementsByClassName("close")[1];
        
        // When the user clicks the button, open the modal 
        namebtn.onclick = function() {
          namemodal.style.display = "block";
        }
        deletebtn.onclick = function() {
          deletemodal.style.display = "block";
        }
        
        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
          namemodal.style.display = "none";
          deletemodal.style.display = "none";
        }
        span2.onclick = function() {
          namemodal.style.display = "none";
          deletemodal.style.display = "none";
        }
        
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
          if (event.target == namemodal) {
            namemodal.style.display = "none";
          }
          if (event.target == deletemodal) {
            deletemodal.style.display = "none";
          }
        }
    </script>
</body>
